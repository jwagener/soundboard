<?xml version="1.0" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>SoundBoard - <%= controller.action_name %></title>
	<%= stylesheet_link_tag 'main' %>
</head>
<body>
	<div id="sitewrapper">
		<div id="header">
			<h1>SoundBoard</h1>
		</div>
		<div id="navi">
			<%= link_to "Home", '/' %>
			<% if session[:user_id] -%>
				<%= link_to "My Profile", {:controller => 'user', :action => 'profile', :id => session[:user_id]} %>
				<%= link_to "Logout", logout_path %>
			<% else -%>
				<%= link_to "Login", login_path %>
				<%= link_to "Sign Up", signup_user_path %>
			<% end -%>
		</div>
		<div id="content">
			<% if flash[:notice] -%> 
			<div id="notice"><%= flash[:notice] %></div> 
			<% end -%>
			<% if flash[:error] -%> 
			<div id="error"><%= flash[:error] %></div> 
			<% end -%>
			<%= yield :layout %>
		</div>
		<div id="footer">
			&copy; SoundBoard 2009
		</div>
	</div>
</body>
</html>