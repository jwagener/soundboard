<?xml version="1.0" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>SoundBoard - <%= controller.action_name %></title>
	<%= stylesheet_link_tag 'main' %>
	<script src="/sc-connect/sc-connect.js"></script>
	<script src="http://jqueryjs.googlecode.com/files/jquery-1.3.2.min.js"></script>
</head>
<body>
	<div id="sitewrapper">
		<div id="header">
			<h1>SoundBoard</h1>
		</div>
		<ul id="navi">
			<li><%= link_to "Home", '/' %></li>
			<% if @current_user -%>
				<li><%= link_to "Your profile", user_profile_path(@current_user.name) %></li>
				<li><%= link_to "Logout", logout_path %></li>
			<% else -%>
				<li><%= link_to "Login", login_path %></li>
				<li><%= link_to "Sign Up", signup_user_path %></li>
			<% end -%>
		</ul>
		<div id="content">
			<% if flash[:notice] -%> 
			<div id="notice"><%= flash[:notice] %></div> 
			<% end -%>
			<% if flash[:error] -%> 
			<div id="error"><%= flash[:error] %></div> 
			<% end -%>
			<%= yield :layout %>
		</div>
		<div id="footer">
			&copy; SoundBoard 2009
		</div>
	</div>
</body>
</html>